
			<div class="container">
				<div class="row mt-4">
					<form action="/restaurants/search" method="POST" class="col-3">
						<div class="input-group rounded-pill new-search">
							<div class="input-group-append">
								<button class="" type="submit" id="search-button"><i class="fas fa-search"></i></button>
							</div>
							<input type="text" name="keyword" value="{{keyword}}" class="form-control" placeholder="輸入餐廳、分類"
								aria-label="Restaurant Name..." value="" aria-describedby="search-button" />
						</div>
					</form>
					<div class="col-6"></div>
					<div class="form-group col-3">
						<select name="category" class="form-control" id="category">
							<option class="option" disabled selected>sort</option>
							<option class="option" value="">A->Z</option>
							<option class="option" value="">Z->A</option>
							<option class="option" value="">類別</option>
							<option class="option" value="">地區</option>
						</select>
					</div>

				</div>

			</div>

<!-- restaurant list -->
<div class="container mt-5">
	<div class="row">
		<div class="col-md-10 col-12 mx-auto">
			<div class="card-columns">
				{{#each restaurants}}
					<div class="mb-3 card-box">
						<a href="/restaurants/{{this._id}}">
							<div class="card">
								<img
									class="card-img-top"
									src="{{this.image}}"
									alt="{{this.name}}"
								/>
								<div class="card-body p-3">
									<h6 class="card-title mb-1">{{this.name}}</h6>

									<div class="restaurant-category mb-1">
										<i class="fas fa-utensils pr-2"></i>
										{{this.category}}
									</div>
									<div>
										<span
											class="badge badge-pill badge-danger font-weight-normal"
										>
											{{this.rating}}
											<i class="fas fa-star fa-xs"></i>
										</span>
									</div>
								</div>
							</div>
						</a>
						<div class="feature">
							<a href="/restaurants/{{this._id}}/edit">
								<i class="fas fa-edit"></i>
							</a>
							<a href="/restaurants/{{this._id}}">
								<i class="fas fa-eye"></i>
							</a>
              <form action="/restaurants/{{this._id}}?_method=delete" method="POST">
                <button type="submit"><i class="fas fa-trash-alt"></i></button>
              </form>

						</div>
					</div>

				{{/each}}
			</div>
		</div>
	</div>
</div>