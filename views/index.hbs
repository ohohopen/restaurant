<!-- search bar -->
<div class="container search-bar">
	<div class="search-bar-outer">
		<div class="search-bar-inner">
			<form action="/search">
				<h4 class="mb-2">尋找餐廳：</h4>
				<div class="input-group">
					<input
						type="text"
						name="keyword"
						value="{{keyword}}"
						class="form-control"
						placeholder="輸入餐廳、分類"
						aria-label="Restaurant Name..."
						value=""
						aria-describedby="search-button"
					/>
					<div class="input-group-append">
						<button class="btn btn-major" type="submit" id="search-button"><i
								class="fas fa-search"
							></i></button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
<!-- restaurant list -->
<div class="container mt-5">
	<div class="row">
		<div class="col-md-10 col-12 mx-auto">
			<div class="card-columns">
				{{#each todos}}
					<div class="mb-3 card-box">

						<div class="card">
							<img
								class="card-img-top"
								src="{{this.image}}"
								alt="{{this.name}}"
							/>
							<div class="card-body p-3">
								<h6 class="card-title mb-1">{{this.name}}</h6>

								<div class="restaurant-category mb-1">
									<i class="fas fa-utensils pr-2"></i>
									{{this.category}}
								</div>
								<div>
									<span
										class="badge badge-pill badge-danger font-weight-normal"
									>
										{{this.rating}}
										<i class="fas fa-star fa-xs"></i>
									</span>
								</div>
							</div>
						</div>
						<div class="feature">
							<a href="/todos/{{this._id}}/edit">
								<i class="fas fa-edit"></i>
							</a>
							<a href="/todos/{{this._id}}">
								<i class="fas fa-eye"></i>
							</a>
							<a href="/todos/{{this._id}}/delete">
								<i class="fas fa-trash-alt"></i>
							</a>
						</div>
					</div>

				{{/each}}
			</div>
		</div>
	</div>
</div>